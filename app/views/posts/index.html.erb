<div class="row">
  <% for post in @posts %>
    <div class="col-md-3 col-sm-6"> <!--as we're looping thru posts, each post is a column with size = 3 -->
      <!--translation: on medium-sized devices and larger, i want each post to occupy 3 units -->
      <!--translation: on small-sized devices, i want each post to occupy 6 units -->
      <h4>
        <%# find user who created post %>
        <% user = User.find_by({ "id" => post["user_id"] }) %>
        <%# handle any potential bad data where the post is missing a user %>
        <% if user %>
          <%= user["first_name"] %>
        <% else %>
          anonymous
        <% end %>
      </h4>
      <img src="<%= post["image"] %>" class="img-fluid"> <!--this makes the size of the image respond to size of column-->
      <p><%= post["body"] %></p>
    </div>
  <% end %>
</div>